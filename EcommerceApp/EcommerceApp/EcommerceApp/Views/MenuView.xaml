<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcommerceApp.Views.MenuView"
             Title="">
    <Grid RowDefinitions="*,auto"
          Padding="10">
        <StackLayout Spacing="10"
                     Margin="0,10">
            <Button Text="Order history" />
            
            <Button Text="View account"
                    Command="{Binding TapButtonAccountCommand}"/>
            
        </StackLayout>
        <Button Text="{Binding TextLogin}" 
                Grid.Row="1"
                BackgroundColor="{StaticResource LogOut}"
                Command="{Binding TapButtonLoginCommand}"/>
    </Grid>
</ContentPage>
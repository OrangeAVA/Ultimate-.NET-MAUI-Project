<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:convert="clr-namespace:MauiTalk.Converters"
             xmlns:local="clr-namespace:MauiTalk"
             x:Class="MauiTalk.App">
    <Application.Resources>
        <ResourceDictionary>
            <convert:BoolToColorConverter x:Key="BoolToColorConverter" />
            <convert:BoolToAlignmentConverter x:Key="BoolToAlignmentConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
